{% extends 'base.html.twig' %}

{% block body %}
    <div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Editar Cliente</h6>
    </div>
    <div class="card-body">
        {{ form_start(edit_form , {'attr': {'class': 'user'}}) }}
        <div class="form-group row">
            <div class="col-sm-3 mb-3 mb-sm-0">
                {{ form_label(edit_form.nombre, 'Nombre') }}
                {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control form-control-user'}}) }}
            </div>
            <div class="col-sm-3 mb-3 mb-sm-0">
                {{ form_label(edit_form.apellido, 'Apellido') }}
                {{ form_widget(edit_form.apellido, {'attr': {'class': 'form-control form-control-user'}}) }}
            </div>
            <div class="col-sm-3 mb-3 mb-sm-0">
                {{ form_label(edit_form.email, 'Email') }}
                {{ form_widget(edit_form.email, {'attr': {'class': 'form-control form-control-user'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 mb-3 mb-sm-0 grupo">
                {{ form_label(edit_form.grupoCliente, 'Grupo') }}
                {{ form_widget(edit_form.grupoCliente, {'attr': {'class': ''}}) }}
            </div>
            <div class="col-sm-6 mb-3 mb-sm-0">
                {{ form_label(edit_form.observaciones, 'Observaciones') }}
                {{ form_widget(edit_form.observaciones, {'attr': {'class': 'form-control form-control-user'}}) }}
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <div class="col-sm-3 mb-3 mb-sm-0 text-center">
                <input type="submit" value="Guardar" class="btn btn-primary btn-user btn-block" />
            </div>
        </div>
        {{ form_end(edit_form) }}
    </div>
    <ul>
        <li>
            <a href="{{ path('cliente_index') }}">volver a la lista</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
